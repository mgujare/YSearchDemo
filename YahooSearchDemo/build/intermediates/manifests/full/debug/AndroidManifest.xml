<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yahoo.search.demo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.yahoo.search.demo.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yahoo.search.demo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Search SDK activities -->
        <activity
            android:name="com.yahoo.mobile.client.share.search.ui.activity.SearchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Demo.translucent"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.yahoo.mobile.client.share.search.ui.activity.ImageGalleryActivity"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.yahoo.mobile.client.share.search.ui.activity.SearchToLinkActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Demo.translucent"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.yahoo.search.demo.view.custom.CustomWebPreviewActivity"
            android:label="@string/title_activity_custom_web_preview" >
        </activity>
        <activity
            android:name="com.yahoo.search.demo.view.custom.CustomImagePreviewActivity"
            android:label="@string/title_activity_custom_web_preview" >
        </activity>

        <!-- Declares the input method service -->
        <service
            android:name="com.yahoo.search.demo.keyboard.YInputIME"
            android:label="@string/y_input_label"
            android:permission="android.permission.BIND_INPUT_METHOD" >
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>

            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>

        <activity
            android:name="com.custom.mylibrary.SearchProxyActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>