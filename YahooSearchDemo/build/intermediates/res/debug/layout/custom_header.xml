<?xml version="1.0" encoding="utf-8"?>
<com.yahoo.search.demo.view.CustomSearchViewHolder
    android:id="@+id/ysa_search_bar_view_group"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_bar_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_launcher"/>

    <EditText
        android:id="@+id/search_bar_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:background="@null"
        android:hint="Search for something"
        android:imeOptions="actionSearch"
        android:singleLine="true"/>

    <ImageView
        android:id="@+id/search_bar_clear_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="16dp"
        android:padding="8dp"
        android:src="@drawable/clear"
        android:tint="#ffbdbdbd"/>

</com.yahoo.search.demo.view.CustomSearchViewHolder><!-- From: file:/Users/mgujare/Documents/test2/SearchSDKDemos/YahooSearchDemo/src/main/res/layout/custom_header.xml -->