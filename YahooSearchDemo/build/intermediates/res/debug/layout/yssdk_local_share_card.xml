<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/localCardLayout">


    <ImageView
        android:id="@+id/local_image"
        android:layout_width="360dp"
        android:src="@drawable/yssdk_local_list_default_icon"
        android:background="@color/yssdk_local_default_thumb_bg"
        android:layout_height="265dp"/>

    <RelativeLayout
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="15dp"
        android:layout_width="328dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/local_title"
            android:textSize="20sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.yahoo.mobile.client.share.search.ui.view.RatingView
            android:layout_below="@+id/local_title"
            android:id="@+id/local_rating"
            android:layout_width="81dp"
            android:layout_height="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/local_ratingText"
            android:layout_toRightOf="@id/local_rating"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_below="@+id/local_title"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />


        <ImageView
            android:id="@+id/local_review_source"
            android:layout_width="44dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/local_title"
            android:layout_toRightOf="@id/local_ratingText"
            android:layout_marginLeft="3dp"
            android:singleLine="true"
            android:src="@drawable/yssdk_yelp_logo" />

        <TextView
            android:id="@+id/local_address"
            android:textSize="15sp"
            android:layout_below="@+id/local_rating"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/mgujare/Documents/test2/SearchSDKDemos/YahooSearchDemo/build/intermediates/exploded-aar/yahoosearchsdk-0.7.0/res/layout/yssdk_local_share_card.xml -->