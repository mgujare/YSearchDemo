<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/yssdk_preview_header_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/preview_back_icon"
        android:layout_width="@dimen/yssdk_preview_header_height"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:gravity="center"
        android:text="@string/yssdk_back_icon_2"
        android:textColor="@android:color/white"
        android:textSize="27sp"
        android:clickable="true"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/preview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/yssdk_preview_title_textsize_large"
            android:textColor="@color/white"
            android:clickable="true"
            android:singleLine="true"
            android:ellipsize="end"/>

    </LinearLayout>

